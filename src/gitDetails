#!/bin/bash
echo ""
echo "###########################################################"
echo "# COMMENT                                                 #"
echo "###########################################################"
git show -s $1


echo ""
echo "###########################################################"
echo "# FILES CHANGED                                           #"
echo "###########################################################"
git show --pretty="format:" --name-only  $1

echo ""
echo "###########################################################"
echo "# ACTUAL CHANGES                                          #"
echo "###########################################################"
git show --pretty="format:" $1
